{
    "MONITOR": {
        "summary": "Listens for all requests received by the server in real-time.",
        "group": "server",
        "since": "1.0.0",
        "arity": -1,
        "function": "monitorCommand",
        "history": [
            [
                "8.0",
                "Added filtering for Command, Client ID, Address, Local Address, Client Type, and User name."
            ]
        ],
        "command_flags": [
            "ADMIN",
            "NOSCRIPT",
            "LOADING",
            "STALE"
        ],
        "arguments": [
            {
                "name": "filter",
                "type": "oneof",
                "multiple": true,
                "since": "8.0",
                "arguments": [
                    {
                        "token": "ID",
                        "name": "client-id",
                        "type": "integer",
                        "optional": true
                    },
                    {
                        "token": "USER",
                        "name": "username",
                        "type": "string",
                        "optional": true
                    },
                    {
                        "token": "ADDR",
                        "name": "addr",
                        "display": "ip:port",
                        "type": "string",
                        "optional": true
                    },
                    {
                        "token": "LADDR",
                        "name": "laddr",
                        "display": "ip:port",
                        "type": "string",
                        "optional": true
                    },
                    {
                        "token": "CMD_FILTER",
                        "name": "cmdfilter",
                        "type": "oneof",
                        "optional": true,
                        "arguments": [
                            {
                                "name": "include",
                                "type": "pure-token",
                                "token": "include"
                            },
                            {
                                "name": "exclude",
                                "type": "pure-token",
                                "token": "exclude"
                            }
                        ]
                    },
                    {
                        "token":"CMD",
                        "name": "command",
                        "type": "string",
                        "optional": true
                    }
                ]
            }
        ]
    }
}
