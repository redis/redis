                {
                    "description": "The hash doesn't exists and no operation was performed.",
                    "const": null
                }
            ]
        },
        "arguments": [
            {
                "name": "key",
                "type": "key",
                "key_spec_index": 0
            },
            {
                "name": "field",
                "type": "string"
            },
            {
                "name": "value",
                "type": "string"
            }
        ]
    }
}
